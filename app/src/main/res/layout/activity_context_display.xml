<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.lzybetter.simpletravlenotes.contextDisplay">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="地点名称："
        android:textSize="20sp" />

    <TextView
        android:id="@+id/savedLocationName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="30sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="地点描述"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/savedLocationDescribe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:textSize="30sp"/>
    <ImageView
        android:id="@+id/savedLocationPicture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        />
    <Button
        android:id="@+id/baiduMapShow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="在百度地图中显示出来"/>
</LinearLayout>
