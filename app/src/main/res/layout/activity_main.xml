<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lzybetter.simpletravlenotes.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:text="获取当前位置信息"/>

    <Button
        android:id="@+id/baiduMapButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:text="在地图中显示出来"/>

    <EditText
        android:id="@+id/inputLatitude"
        android:layout_below="@id/baiduMapButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入维度"/>
    <EditText
        android:id="@+id/inputLongitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputLatitude"
        android:hint="请输入经度"/>
    <Button
        android:id="@+id/savedLocationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputLongitude"
        android:text="在百度地图中显示保存的地址"
        />
    <EditText
        android:id="@+id/input_locationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/savedLocationButton"
        android:hint="请输入当前位置的名称"/>
    <EditText
        android:id="@+id/input_locationDescribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_locationName"
        android:lines="1"
        android:hint="请输入当前位置的描述"/>
    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_locationDescribe"
        android:text="保存当前地址的描述"/>
    <Button
        android:id="@+id/readButton"
        android:layout_below="@id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="读取并显示储存的位置"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/readButton"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:id="@+id/pictureButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="拍照"/>
    </LinearLayout>

</RelativeLayout>
